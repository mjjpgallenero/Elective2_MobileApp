<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:EatSpinApp"
             x:Class="EatSpinApp.MainPage">

    <StackLayout>
        <!-- Place new controls here -->
        <Button Text="Open" Command="{Binding TestNavigate}"/>
        <Label Text="{Binding TestSpinItem}"/>
        <Button Text="Spin" Command="{Binding TestSpin}" VerticalOptions="EndAndExpand"/>
        <Label Text="EatSpin! Alpha" 
           HorizontalOptions="Center"
           VerticalOptions="EndAndExpand" />
    </StackLayout>
    


</ContentPage>
