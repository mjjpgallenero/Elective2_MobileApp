<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:EatSpinApp"
             x:Class="EatSpinApp.MainPage">

    <!--<ContentPage.BindingContext>
        <local:MainPageViewModel></local:MainPageViewModel>
    </ContentPage.BindingContext>-->

    <ContentPage.ToolbarItems>
        <ToolbarItem Order="Primary"
                     Text="Settings"
                     Command="{Binding NavigateToSettingsCommand}">
            </ToolbarItem>
    </ContentPage.ToolbarItems>
    <StackLayout>
        <!-- Place new controls here -->
        <StackLayout Padding="3">
            <Label Text="{Binding RandomizedRestaurant.RestaurantName}"
                   FontAttributes="Bold"/>
            <Label Text="{Binding RandomizedRestaurant.Address}"/>
            <Label Text="{Binding RandomizedRestaurant.ContactNumber}"/>
        </StackLayout>
        <Button Text="Spin" Command="{Binding SpinCommand}" VerticalOptions="EndAndExpand"/>
        <Label Text="EatSpin! Alpha" 
           HorizontalOptions="Center"
           VerticalOptions="EndAndExpand" />
    </StackLayout>
    


</ContentPage>
