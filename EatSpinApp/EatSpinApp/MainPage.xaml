<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:EatSpinApp"
             x:Class="EatSpinApp.MainPage">

    <StackLayout>
        <!-- Place new controls here -->
        <Entry Placeholder="Enter test entry" Text="{Binding Path=TestEntry}"/>
        <Button Text="Add Test" Command="{Binding TestCommand}"/>
        <Button Text="Delete Test" Command="{Binding TestDelete}"/>
        <ListView ItemsSource="{Binding TestList, Mode=TwoWay}" HasUnevenRows="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout>
                            <Label Text="{Binding RestaurantName}"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>
        <Button Text="Open" Command="{Binding TestNavigate}"/>
        <Label/>
        <Button Text="Spin"/>
    	<Label Text="EatSpin! Alpha" 
           HorizontalOptions="Center"
           VerticalOptions="EndAndExpand" />
    </StackLayout>
    


</ContentPage>
